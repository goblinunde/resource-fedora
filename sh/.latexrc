# ==============================================================================
#   .latexrc - LaTeX Compiler User Configuration
#   Generated by latexcompile.sh v6.0
# ==============================================================================

[General]
# 默认编译引擎: xelatex, pdflatex, lualatex
default_engine = xelatex

# 编译后自动清理辅助文件
auto_cleanup = false

# 默认文本编辑器 (用于编辑模板等)
editor = nvim

# 编译后自动打开PDF
auto_open_pdf = true

[Theme]
# 激活的主题: default, nord, dracula, sakura, matrix, gruvbox, monokai, custom
active_theme = dracula

# 自定义主题颜色 (仅当 active_theme=custom 时生效)
# 格式: R,G,B
custom_primary = 136,192,208
custom_success = 163,190,140
custom_warning = 235,203,139
custom_error = 191,97,106
custom_accent = 180,142,173
custom_cyan = 129,161,193

[Features]
# 启用编译历史记录
enable_history = true

# 历史记录保存的最大条目数
max_history = 10

# 启用字数统计 (需要 texcount 工具)
enable_word_count = true

# 启用依赖包检测
enable_dependency_check = true

[PDF]
# PDF查看器命令 (留空则使用系统默认: xdg-open/open/explorer.exe)
# 示例: zathura, evince, okular
viewer =

# PDF查看器额外参数
viewer_args =

[Advanced]
# Latexmk 额外参数
latexmk_extra_args =

# 显示详细编译输出
verbose_output = false

# 编译超时 (秒, 0表示无限制)
compile_timeout = 300
